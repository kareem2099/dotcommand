{
  "name": "dotcommand",
  "displayName": "DotCommand - Command Manager",
  "publisher": "freerave",
  "description": "Save, view, copy, and manage your frequently used commands in VS Code",
  "version": "1.4.0",
  "icon": "assets/icons/icon.png",
  "keywords": [
    "commands",
    "command manager",
    "terminal",
    "productivity",
    "snippets",
    "workflow",
    "automation",
    "tools",
    "development",
    "cli",
    "context-aware"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "DotCommand",
      "properties": {
        "dotcommand.autoSave.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic saving of terminal commands"
        },
        "dotcommand.autoSave.minLength": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 100,
          "description": "Minimum command length to auto-save (characters)"
        },
        "dotcommand.autoSave.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notifications when commands are auto-saved"
        },
        "dotcommand.general.maxCommands": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Maximum number of commands to store"
        },
        "dotcommand.mostUsedThreshold": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 50,
          "description": "Number of uses before a command is promoted to 'Most Used' category"
        },
        "dotcommand.testing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable command testing/validation features"
        },
        "dotcommand.testing.showSimulatedOutput": {
          "type": "boolean",
          "default": true,
          "description": "Show simulated command output in test results"
        },
        "dotcommand.testing.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict mode - prevent saving commands with warnings/dangers"
        },
        "dotcommand.promptRegex.zsh": {
          "type": "string",
          "default": null,
          "description": "Custom regex to remove Zsh prompt. Example: '^.*%\\s+'"
        },
        "dotcommand.promptRegex.bash": {
          "type": "string",
          "default": null,
          "description": "Custom regex to remove Bash prompt. Example: '^.*\\$\\s+'"
        },
        "dotcommand.promptRegex.powershell": {
          "type": "string",
          "default": null,
          "description": "Custom regex to remove PowerShell prompt. Example: '^.*(PS\\s+.*?>\\s*)'"
        },
        "dotcommand.promptRegex.cmd": {
          "type": "string",
          "default": null,
          "description": "Custom regex to remove CMD prompt. Example: '^.*(>)'"
        },
        "dotcommand.promptRegex.fish": {
          "type": "string",
          "default": null,
          "description": "Custom regex to remove Fish prompt. Example: '^.*(>\\s*)'"
        },
        "dotcommand.terminal.cleanup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic cleanup of inactive DotCommand terminals"
        },
        "dotcommand.terminal.cleanup.timeoutMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 480,
          "description": "Time in minutes before inactive terminals are automatically closed"
        },
        "dotcommand.terminal.category.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable category-based terminal naming (e.g., DotCommand-Git, DotCommand-NPM)"
        },
        "dotcommand.history.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable global command history tracking"
        },
        "dotcommand.history.maxSize": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Maximum number of commands to keep in history"
        },
        "dotcommand.history.showSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show command suggestions based on history when typing"
        },
        "dotcommand.suggestions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable intelligent command suggestions in terminal"
        },
        "dotcommand.suggestions.maxSuggestions": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of suggestions to show"
        },
        "dotcommand.suggestions.minPrefixLength": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 10,
          "description": "Minimum characters before showing suggestions"
        },
        "dotcommand.suggestions.includeSavedCommands": {
          "type": "boolean",
          "default": true,
          "description": "Include saved commands in suggestions"
        },
        "dotcommand.suggestions.includePreparedCommands": {
          "type": "boolean",
          "default": false,
          "description": "Include prepared commands in suggestions"
        },
        "dotcommand.suggestions.includeTemplates": {
          "type": "boolean",
          "default": false,
          "description": "Include command templates in suggestions"
        },
        "dotcommand.suggestions.sortByFrequency": {
          "type": "boolean",
          "default": true,
          "description": "Sort suggestions by usage frequency"
        },
        "dotcommand.suggestions.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the top suggested command in the Status Bar"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dotcommand",
          "title": "DotCommand",
          "icon": "assets/icons/icon.png"
        }
      ]
    },
    "views": {
      "dotcommand": [
        {
          "id": "dotcommand.commandsView",
          "name": "My Commands",
          "icon": "$(terminal)",
          "contextualTitle": "Personal Commands"
        },
        {
          "id": "dotcommand.preparedView",
          "name": "Prepared Commands",
          "icon": "$(lightbulb-autofix)",
          "contextualTitle": "Prepared Commands"
        }
      ]
    },
    "commands": [
      {
        "command": "dotcommand.saveCommand",
        "title": "Save Command",
        "icon": "$(add)"
      },
      {
        "command": "dotcommand.viewCommands",
        "title": "View Commands",
        "icon": "$(list-unordered)"
      },
      {
        "command": "dotcommand.refreshCommands",
        "title": "Refresh Commands",
        "icon": "$(refresh)"
      },
      {
        "command": "dotcommand.copyCommandFromTree",
        "title": "Copy Command",
        "icon": "$(copy)"
      },
      {
        "command": "dotcommand.deleteCommandFromTree",
        "title": "Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "dotcommand.importTerminalHistory",
        "title": "Import Terminal History",
        "icon": "$(archive)"
      },
      {
        "command": "dotcommand.runCommandFromTree",
        "title": "Run Command",
        "icon": "$(play)"
      },
      {
        "command": "dotcommand.toggleFavorite",
        "title": "Toggle Favorite",
        "icon": "$(star)"
      },
      {
        "command": "dotcommand.runPreparedCommand",
        "title": "Run Prepared Command",
        "icon": "$(play)"
      },
      {
        "command": "dotcommand.addToMyCommands",
        "title": "Add to My Commands",
        "icon": "$(add)"
      },
      {
        "command": "dotcommand.moveToMyCommands",
        "title": "Move to My Commands",
        "icon": "$(arrow-right)"
      },
      {
        "command": "dotcommand.createNewTaskTemplate",
        "title": "Create New Task Template",
        "icon": "$(new-file)"
      },
      {
        "command": "dotcommand.taskManager",
        "title": "Task Manager",
        "icon": "$(tools)"
      },
      {
        "command": "dotcommand.testCommand",
        "title": "Test Command",
        "icon": "$(check)"
      },
      {
        "command": "dotcommand.viewTrash",
        "title": "View Trash",
        "icon": "$(trash)"
      },
      {
        "command": "dotcommand.searchPreparedCommands",
        "title": "Search & Filter Prepared Commands",
        "icon": "$(search)"
      },
      {
        "command": "dotcommand.searchMyCommands",
        "title": "Search & Filter My Commands",
        "icon": "$(search)"
      },
      {
        "command": "dotcommand.clearPreparedFilters",
        "title": "Clear Filters",
        "icon": "$(clear-all)"
      },
      {
        "command": "dotcommand.clearMyCommandsFilters",
        "title": "Clear Filters",
        "icon": "$(clear-all)"
      },
      {
        "command": "dotcommand.showCommandHistory",
        "title": "Show Command History",
        "icon": "$(history)"
      },
      {
        "command": "dotcommand.searchCommandHistory",
        "title": "Search Command History",
        "icon": "$(search)"
      },
      {
        "command": "dotcommand.showCommandHistoryStats",
        "title": "Show History Statistics",
        "icon": "$(graph)"
      },
      {
        "command": "dotcommand.showCommandTemplates",
        "title": "Show Command Templates",
        "icon": "$(library)"
      },
      {
        "command": "dotcommand.refreshTree",
        "title": "Refresh Commands",
        "icon": "$(refresh)"
      },
      {
        "command": "dotcommand.createCommandTemplate",
        "title": "Create Command Template",
        "icon": "$(add)"
      },
      {
        "command": "dotcommand.executeCommandTemplate",
        "title": "Execute Command Template",
        "icon": "$(play)"
      },
      {
        "command": "dotcommand.templateManager",
        "title": "Template Manager (UI)",
        "icon": "$(library)"
      },
      {
        "command": "dotcommand.quickCommandPicker",
        "title": "Quick Run Command",
        "icon": "$(search)"
      },
      {
        "command": "dotcommand.showFavorites",
        "title": "Show Favorite Commands",
        "icon": "$(star)"
      },
      {
        "command": "dotcommand.showRecentCommands",
        "title": "Show Recent Commands",
        "icon": "$(history)"
      },
      {
        "command": "dotcommand.triggerSuggestions",
        "title": "Trigger Command Suggestions (Test)",
        "icon": "$(lightbulb)"
      },
      {
        "command": "dotcommand.quickRun",
        "title": "Smart Quick Run (Suggested)",
        "category": "DotCommand",
        "icon": "$(zap)"
      }
    ],
    "keybindings": [
      {
        "command": "dotcommand.saveCommand",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "dotcommand.viewCommands",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      },
      {
        "command": "dotcommand.viewTrash",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "dotcommand.toggleFavorite",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "viewItem == commandItem"
      },
      {
        "command": "dotcommand.runCommandFromTree",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "viewItem == commandItem"
      },
      {
        "command": "dotcommand.copyCommandFromTree",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "viewItem == commandItem"
      },
      {
        "command": "dotcommand.searchMyCommands",
        "key": "ctrl+shift+/",
        "mac": "cmd+shift+/",
        "when": "view == dotcommand.commandsView"
      },
      {
        "command": "dotcommand.searchPreparedCommands",
        "key": "ctrl+shift+/",
        "mac": "cmd+shift+/",
        "when": "view == dotcommand.preparedView"
      },
      {
        "command": "dotcommand.clearMyCommandsFilters",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "view == dotcommand.commandsView"
      },
      {
        "command": "dotcommand.clearPreparedFilters",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "view == dotcommand.preparedView"
      },
      {
        "command": "dotcommand.quickCommandPicker",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "dotcommand.showFavorites",
        "key": "ctrl+shift+1",
        "mac": "cmd+shift+1",
        "when": "!editorTextFocus"
      },
      {
        "command": "dotcommand.showRecentCommands",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "!editorTextFocus"
      },
      {
        "command": "dotcommand.showCommandHistory",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y"
      },
      {
        "command": "dotcommand.showAnalytics",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "!editorTextFocus"
      },
      {
        "command": "dotcommand.templateManager",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "!editorTextFocus"
      },
      {
        "command": "dotcommand.taskManager",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "dotcommand.viewTrash",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "!editorTextFocus"
      },
      {
        "command": "dotcommand.quickRun",
        "key": "ctrl+alt+space",
        "mac": "cmd+alt+space"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dotcommand.saveCommand",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.refreshCommands",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.importTerminalHistory",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.createNewTaskTemplate",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.taskManager",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.viewTrash",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.searchMyCommands",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.clearMyCommandsFilters",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.refreshTree",
          "when": "view == dotcommand.commandsView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.searchPreparedCommands",
          "when": "view == dotcommand.preparedView",
          "group": "navigation"
        },
        {
          "command": "dotcommand.clearPreparedFilters",
          "when": "view == dotcommand.preparedView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "dotcommand.runCommandFromTree",
          "when": "view == dotcommand.commandsView && viewItem == commandItem",
          "group": "inline@1"
        },
        {
          "command": "dotcommand.testCommand",
          "when": "view == dotcommand.commandsView && viewItem == commandItem",
          "group": "7_modification@1"
        },
        {
          "command": "dotcommand.toggleFavorite",
          "when": "view == dotcommand.commandsView && viewItem == commandItem",
          "group": "7_modification@4"
        },
        {
          "command": "dotcommand.copyCommandFromTree",
          "when": "view == dotcommand.commandsView && viewItem == commandItem",
          "group": "7_modification@2"
        },
        {
          "command": "dotcommand.deleteCommandFromTree",
          "when": "view == dotcommand.commandsView && viewItem == commandItem",
          "group": "7_modification@3"
        },
        {
          "command": "dotcommand.runPreparedCommand",
          "when": "view == dotcommand.preparedView && viewItem == preparedCommandItem",
          "group": "inline@1"
        },
        {
          "command": "dotcommand.addToMyCommands",
          "when": "view == dotcommand.preparedView && viewItem == preparedCommandItem",
          "group": "7_modification@1"
        },
        {
          "command": "dotcommand.moveToMyCommands",
          "when": "view == dotcommand.preparedView && viewItem == userPreparedTaskItem",
          "group": "7_modification@2"
        }
      ],
      "editor/context": [
        {
          "command": "dotcommand.saveCommand",
          "when": "editorTextFocus",
          "group": "7_modification@1"
        },
        {
          "command": "dotcommand.testCommand",
          "when": "editorTextFocus",
          "group": "7_modification@2"
        },
        {
          "command": "dotcommand.quickCommandPicker",
          "when": "editorTextFocus",
          "group": "navigation@1"
        }
      ],
      "terminal/context": [
        {
          "command": "dotcommand.saveCommand",
          "group": "7_modification@1"
        },
        {
          "command": "dotcommand.quickCommandPicker",
          "group": "navigation@1"
        },
        {
          "command": "dotcommand.showCommandHistory",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "dotcommand.quickCommandPicker",
          "group": "7_modification@1"
        },
        {
          "command": "dotcommand.showCommandHistory",
          "group": "navigation@1"
        }
      ],
      "statusBar/context": [
        {
          "command": "dotcommand.quickCommandPicker",
          "when": "statusBarItem == dotcommand.quickRun",
          "group": "navigation@1"
        },
        {
          "command": "dotcommand.quickRun",
          "when": "statusBarItem == dotcommand.suggestions",
          "group": "navigation@1"
        },
        {
          "command": "dotcommand.showFavorites",
          "when": "statusBarItem == dotcommand.favorites",
          "group": "navigation@1"
        },
        {
          "command": "dotcommand.showRecentCommands",
          "when": "statusBarItem == dotcommand.recent",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "postcompile": "node scripts/generate-default-tasks.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.0.0",
    "typescript": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kareem2099/dotcommand"
  },
  "bugs": {
    "url": "https://github.com/kareem2099/dotcommand/issues"
  },
  "homepage": "https://github.com/kareem2099/dotcommand#readme"
}
